<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>[<%= task.completed ? 'x' : ' ' %>] <%= link_to task.title, task_path(task) %> <%= link_to '--delete task', task_path(task), method: :delete, data: {confirm: "Are you sure?"} %></li>
  <% end %>
</ul>

<p><%= link_to '+ create a new task', new_task_path %></p>
